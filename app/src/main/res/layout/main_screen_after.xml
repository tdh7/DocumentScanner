<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/constraint_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <com.tdh7.documentscanner.ui.widget.ScaleSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_saved_document_two_row"
            android:paddingBottom="108dp"
            tools:itemCount="10"
            tools:spanCount="2"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:overScrollMode="never"
            />

    </com.tdh7.documentscanner.ui.widget.ScaleSwipeRefreshLayout>
    <ImageView
        android:id="@+id/floating_add_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/ic_add_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:background="@drawable/background_floating_button"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/status_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </FrameLayout>
    <View
        android:id="@+id/app_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/status_parent"
        android:layout_marginTop="8dp"
        android:background="?app_bar_background"/>
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        app:srcCompat="@drawable/ic_menu_24dp"
        android:tint="?app_bar_icon_tint"
        android:layout_marginStart="10dp"
        android:background="@drawable/ripple_transparent_50dp"
        android:padding="9dp" />
    <ImageView
        android:id="@+id/pick_camera_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp"
        android:background="@drawable/ripple_transparent_50dp"
        android:tint="?app_bar_icon_tint"
        android:layout_marginEnd="8dp"
        android:padding="11dp"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        tools:alpha="1"
        tools:scaleX="1"
        tools:scaleY="1"/>
    <ImageView
        android:id="@+id/pick_photo_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        app:layout_constraintEnd_toStartOf="@id/pick_camera_icon"
        app:srcCompat="@drawable/add_image"
        android:tint="?app_bar_icon_tint"
        android:padding="11dp"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        tools:alpha="1"
        tools:scaleX="1"
        tools:scaleY="1"
        android:background="@drawable/ripple_transparent_50dp"/>
    <TextView
        android:id="@+id/search_hint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/helvetica_font"
        android:textSize="17sp"
        android:textColor="?search_hint_color"
        android:paddingTop="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="6dp"
        android:text="Search your documents"
        android:alpha="0"
        tools:alpha="1"
        tools:scaleX="1"
        tools:scaleY="1"
        app:layout_constraintStart_toEndOf="@id/menu_icon"
        app:layout_constraintEnd_toStartOf="@id/pick_photo_icon"
        app:layout_constraintTop_toTopOf="@id/app_bar"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        />
    <ImageView
        android:id="@+id/app_icon"
        android:layout_height="45dp"
        android:layout_width="25dp"
        app:layout_constraintTop_toTopOf="@id/app_title"
        app:layout_constraintBottom_toBottomOf="@id/app_title"
        app:layout_constraintStart_toStartOf="@id/app_bar"
        android:src="@drawable/scan_stock_96"
        android:paddingTop="10dp"
        android:tint="@color/scanner_theme_color"
        android:paddingBottom="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/app_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:visibility="gone"/>
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/helvetica_font"
        android:textSize="15sp"
        android:textColor="?scanned_document_color"
        android:text="Scanner"
        android:textStyle="bold"
        android:paddingTop="4dp"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintTop_toTopOf="@id/app_bar"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        tools:visibility="gone"
        />
</androidx.constraintlayout.motion.widget.MotionLayout>